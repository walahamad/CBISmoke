<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests" thread-count="10"
	data-provider-thread-count="2">

	<test name="ordersHistory chrome">
		<parameter name="browserName" value="chrome"></parameter>
		<classes>
			 <class name="com.generic.tests.ordersHistory.OrderHistoryValidation" 
				/> 
			<class name="com.generic.tests.ordersHistory.OrderDetailsValidation" />

		</classes>

	</test><!-- Test -->
	<test name="ordersHistory ff">
		<parameter name="browserName" value="firefox"></parameter>
		<classes>
			<class name="com.generic.tests.ordersHistory.OrderHistoryValidation" 
				/> 
		 	 <class name="com.generic.tests.ordersHistory.OrderDetailsValidation" 
				/>
		</classes>
	</test><!-- Test -->

	<test name="ordersHistory mobile">
		<parameter name="browserName" value="mobile_Nexus 5"></parameter>
		<classes>
			 <class name="com.generic.tests.ordersHistory.OrderHistoryValidation" 
				/> 
			 <class name="com.generic.tests.ordersHistory.OrderDetailsValidation" 
				/>
		</classes>
	</test><!-- Test -->
</suite> <!-- Suite -->